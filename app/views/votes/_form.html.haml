= form_with model: @vote, class: 'container mx-auto'do |f|
  .flex.mt-16.bg-white.p-8.rounded.mx-auto.shadow.justify-between{class: 'w-1/2'}
    %px-4.self-center.text-center.w-full
      = f.label :option, @option.name, class: 'text-4xl w-full text-center'
      = f.hidden_field :option_id, value: @option.id
      = f.hidden_field :current_option, value: params[:option]
  .flex.mt-4.p-8.mx-auto.justify-between{class: 'w-1/2'}
    .w-full.text-center.px-4
      = f.button :submit, class: 'btn btn-red w-full', name: "outcome", value: 0 do
        %i.fas.fa-thumbs-down.fa-3x
    .w-full.text-center.px-4
      = f.button :submit, class: 'btn btn-green w-full', name: "outcome", value: 1 do
        %i.fas.fa-thumbs-up.fa-3x
